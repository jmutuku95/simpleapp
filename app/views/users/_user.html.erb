<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <%if current_user.admin? %>
    <%= link_to "Delete", user, method: :delete,
                                data: { confirm: "Are you sure you want to delete this user?" },
                                class: "btn btn-danger delete-btn"  %>
  <% end %>
</li>